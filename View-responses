<body>
    <h1>üíñ –í–∞–ª–µ–Ω—Ç–∏–Ω —Ö–∞—Ä–∏—É–ª—Ç—É—É–¥ üíñ</h1>
    <div id="responses">Loading...</div>

    <script>
        const GITHUB_USERNAME = "mr7t";
        const REPO_NAME = "Saihnaad";
        const FILE_PATH = "responses.json";
        const GITHUB_TOKEN = "your-personal-access-token";  // Replace with your token

        async function fetchResponses() {
            let apiUrl = `https://api.github.com/repos/${GITHUB_USERNAME}/${REPO_NAME}/contents/${FILE_PATH}`;
            let response = await fetch(apiUrl, { headers: { "Authorization": `token ${GITHUB_TOKEN}` } });
            let data = await response.json();
            let content = JSON.parse(atob(data.content)); // Decode base64 content

            let responseDiv = document.getElementById("responses");
            responseDiv.innerHTML = "<ul>" + content.map(r => `<li><b>${r.activity}</b> - ${r.timestamp}</li>`).join("") + "</ul>";
        }

        fetchResponses();
    </script>
</body>
